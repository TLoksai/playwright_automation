{
  "name": "knowsy-e2e-automation",
  "version": "1.0.0",
  "description": "Playwright E2E automation testing project for Knowsy Game",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:ui:headed": "playwright test --ui --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:list": "playwright test --list",
    "test:grep": "playwright test -g",
    "test:project": "playwright test --project",
    "test:update-snapshots": "playwright test --update-snapshots",
    "install:playwright": "playwright install",
    "install:browsers": "playwright install --with-deps chromium",
    "lint": "echo 'No linter configured'",
    "prettier": "echo 'No prettier configured'"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "automation",
    "qa"
  ],
  "author": "QA Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@types/node": "^20.11.24",
    "dotenv": "^16.4.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
